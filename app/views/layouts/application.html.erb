<!DOCTYPE html>
<html>
<head>
  <title>Bethel Church Staff</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="authentication">
		<% if current_user %>
			Welcome <%= current_user.name %>!
			<%= link_to "Sign Out", signout_path %>
		<% else %>
			<%= link_to "Sign in", "/auth/google_apps" %>
		<% end %>
	</div>
<%= yield %>

</body>
</html>
