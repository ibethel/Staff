<!DOCTYPE html>
<html>
<head>
	<title>Bethel Church Staff | Who are We?</title>
	<%= stylesheet_link_tag :all, cache: "all-staff" %>
	<%= javascript_include_tag :defaults, "jquery.scroll", cache: "all-staff" %>
	<%= csrf_meta_tag %>
</head>
<body>
	<div id="wrapper">
		<%= link_to(image_tag("logo.png", id: "logo", class: "left"), root_path)%>
		<div id="authentication" class="right">
			<% if current_user %>
				<%= link_to "My Profile", profile_path(current_user) %> | <%= link_to "Sign Out", signout_path %>
			<% else %>
				<%= link_to "Sign in", "/auth/google_apps" %>
			<% end %>
		</div>
		<div class="clear"></div>
		<% if flash[:notice] %>
			<div id="messages">
			<%= flash[:notice] %>
			</div>
		<% end%>
		
		<div class="main-content">
			<%= yield %>
		</div>
	</div>
</body>
</html>