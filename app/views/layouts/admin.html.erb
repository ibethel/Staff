<!DOCTYPE html>
<html>
<head>
	<title><%= @title || "Get to Know Us"%> | <%= @organization.name %></title>
	<%= stylesheet_link_tag "admin" %>
	<%= javascript_include_tag :defaults, cache: "admin" %>
	<%= csrf_meta_tag %>
</head>
<body id="<%= controller.controller_name %>">
	<div id="wrapper">
		<%= link_to(image_tag("logo.png", id: "logo", class: "left"), root_path)%>
		<div id="authentication" class="right">
			<%= link_to "Users", admin_users_path %> |
			<%= link_to "Departments", admin_departments_path %> |
			<%= link_to "Awards", admin_awards_path %> | 
			<%= link_to "Sign Out", signout_path %>
		</div>
		<div class="clear"></div>
		<% if flash[:notice] %>
			<div id="messages">
			<%= flash[:notice] %>
			</div>
		<% end%>
		
		<div class="main-content">
			<%= yield %>
		</div>
	</div>
</body>
</html>