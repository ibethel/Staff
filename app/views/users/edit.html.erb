<div>
	<div class="right">
		<div class="bubble right">
			<%= image_tag(@user.image.url(:medium))%>
		</div>
		<div class="profile-page clear">
			<div id="video-screenshot">
				<%= render :partial => "users/video", locals: {user: @user}%>
			</div>
		</div>
	</div>
</div>
<h1>Edit Profile</h1>
<%= render 'form' %>

<div id="friendships">
	<div id="should-meet">
		<h4>Check these people out:</h4>
		<% @user.missing_connections.each do |user| %>
			<%= render partial: "users/single", locals: {user: user}%>
		<% end %>
		<div class="clear"></div>
	</div>
</div>