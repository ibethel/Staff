<div>
	<div class="right">
		<div class="bubble right">
			<%= image_tag(@user.image.url(:medium))%>
		</div>
		<div class="profile-page clear">
			<%= render :partial => "users/video", locals: {user: @user}%>
		</div>
	</div>
</div>
<h1>Edit Profile</h1>
<%= render 'form' %>

<div id="friendships">
	<div id="should-meet">
		<h4>Who Are They?:</h4>
		<% @user.missing_connections.each do |user| %>
			<%= render partial: "users/single", locals: {user: user}%>
		<% end %>
		<div class="clear"></div>
	</div>
	<div id="has-met">
		<h4>You have met:</h4>
		<% @user.friendships.each do |friend| %>
			<%= render partial: "users/single", locals: {user: friend.friend}%>
		<% end %>
		<div class="clear"></div>
	</div>
</div>